{
  "name": "technomart",
  "scripts": {
    "build": "cross-env NODE_ENV=production gulp build",
    "start": "gulp build && gulp server",
    "test": "gulp test",
    "bem:validate": "bem-validate build/**/*.html",
    "deploy": "npm run build && gh-pages -d build",
    "push": "git add . && git commit -m \"edit\" && git push"
  },
  "source": "source",
  "build": "build",
  "temp": "temp",
  "dependencies": {
    "picturefill": "^3.0.3",
    "svg4everybody": "^2.1.9"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.8.0",
    "@typescript-eslint/parser": "^1.10.2",
    "autoprefixer": "^9.5.0",
    "bem-validate": "^1.1.2",
    "browser-sync": "^2.26.3",
    "cross-env": "^5.2.0",
    "del": "^3.0.0",
    "eslint-config-htmlacademy": "^0.5.2",
    "gh-pages": "^2.0.1",
    "gulp": "^4.0.0",
    "gulp-changed": "^3.2.0",
    "gulp-combine-mq": "^0.4.0",
    "gulp-css-base64": "^1.3.4",
    "gulp-data": "^1.3.1",
    "gulp-eslint": "^5.0.0",
    "gulp-htmlhint": "^2.2.1",
    "gulp-htmlmin": "^5.0.1",
    "gulp-if": "^2.0.2",
    "gulp-imagemin": "^5.0.3",
    "gulp-lintspaces": "^1.0.1",
    "gulp-load-plugins": "^1.5.0",
    "gulp-nunjucks-render": "^2.2.3",
    "gulp-plumber": "^1.2.x",
    "gulp-postcss": "^8.0.x",
    "gulp-remark-lint-dko": "^1.0.2",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.x",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylelint": "^8.0.0",
    "gulp-svgstore": "^7.0.1",
    "gulp-w3c-html-validator": "^1.4.3",
    "gulp-webp": "^4.0.1",
    "htmlacademy-stylelint-config": "^0.0.1",
    "imagemin-jpegoptim": "^6.0.0",
    "nunjucks-includeData": "0.0.9",
    "postcss-csso": "^3.0.0",
    "pre-commit": "^1.2.2",
    "require-dir": "^1.2.0",
    "rollup": "^1.11.3",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-typescript": "^1.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "stylelint": "^10.0.1",
    "typescript": "^3.4.5"
  },
  "base64": {
    "baseDir": "../../temp/icons",
    "maxWeightResource": 10000,
    "extensionsAllowed": [
      ".svg",
      ".png"
    ]
  },
  "htmlhint": {
    "alt-require": true,
    "attr-lowercase": [
      "viewBox",
      "preserveAspectRatio"
    ],
    "attr-no-duplication": true,
    "attr-unsafe-chars": true,
    "attr-value-double-quotes": true,
    "attr-value-not-empty": false,
    "doctype-first": true,
    "doctype-html5": true,
    "href-abs-or-rel": false,
    "id-class-ad-disabled": false,
    "id-unique": true,
    "inline-script-disabled": false,
    "space-tab-mixed-disabled": "space",
    "spec-char-escape": true,
    "src-not-empty": true,
    "style-disabled": false,
    "tag-pair": true,
    "tag-self-close": false,
    "tagname-lowercase": true,
    "title-require": true
  },
  "htmlmin": {
    "collapseBooleanAttributes": true,
    "collapseWhitespace": true,
    "decodeEntities": true,
    "html5": true,
    "includeAutoGeneratedTags": false,
    "minifyCSS": true,
    "minifyJS": true,
    "quoteCharacter": "\"",
    "processConditionalComments": true,
    "removeComments": true,
    "removeEmptyAttributes": true,
    "removeRedundantAttributes": true,
    "removeScriptTypeAttributes": true,
    "removeStyleLinkTypeAttributes": true,
    "trimCustomFragments": true,
    "useShortDoctype": true
  },
  "svgo": {
    "plugins": [
      {
        "removeViewBox": false
      },
      {
        "removeTitle": true
      },
      {
        "cleanupNumericValues": {
          "floatPrecision": 2
        }
      },
      {
        "cleanupNumericValues": {
          "floatPrecision": 2
        }
      },
      {
        "convertPathData": {
          "floatPrecision": 2
        }
      },
      {
        "transformsWithOnePath": {
          "floatPrecision": 2
        }
      },
      {
        "convertTransform": {
          "floatPrecision": 2
        }
      },
      {
        "cleanupListOfValues": {
          "floatPrecision": 2
        }
      }
    ]
  },
  "stylelint": {
    "config": {
      "extends": "htmlacademy-stylelint-config"
    },
    "reporters": [
      {
        "console": true,
        "formatter": "string"
      }
    ]
  },
  "eslint": {
    "parserOptions": {
      "ecmaVersion": 2018
    },
    "env": {
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": "htmlacademy/es6",
    "rules": {
      "indent": "off",
      "no-console": "warn",
      "no-irregular-whitespace": [
        "off",
        {
          "skipRegExps": true,
          "skipStrings": true
        }
      ],
      "no-new": "off",
      "object-curly-spacing": "off"
    }
  },
  "tslint": {
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "parserOptions": {
      "sourceType": "module"
    }
  },
  "editorconfig": {
    "editorconfig": ".editorconfig"
  },
  "remarkLint": {
    "rules": {
      "first-heading-level": false,
      "list-item-indent": "space",
      "maximum-line-length": false
    }
  },
  "jpegoptim": {
    "max": 80,
    "progressive": true
  },
  "webp": {
    "quality": 80
  },
  "svgstore": {
    "inlineSvg": true
  },
  "uglify": {
    "output": {
      "comments": false
    }
  },
  "server": {
    "cors": true,
    "ui": false,
    "notify": false,
    "reloadOnRestart": true
  },
  "browserslist": [
    "last 6 version",
    "> 0.2%",
    "not dead"
  ],
  "license": "ISC"
}
