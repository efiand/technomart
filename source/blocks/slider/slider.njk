<div class="slider {{ params.mix }}">
  <ul class="__slides">
    {% for slide in params.slides %}
      <li class="__slide">
        {{ include(slide.picture) }}
        <b class="__title">
          {{ slide.title }}
        </b>
        <p class="__description">
          {{ slide.description }}
        </p>
        <a class="__button button" href="{{ slide.link.href }}">
          {{ slide.link.title }}
        </a>
      </li>
    {% endfor %}
  </ul>

  <div class="__dots hidden">
    {% for dot in params.slides %}
      <button class="__dot" data-index="{{ loop.index0 }}">
        <span class="visually-hidden">
          {{ params.titles.dotPrefix }}
          {{ loop.index }}
        </span>
      </button>
    {% endfor %}
  </div>

  <button class="__browsing __browsing--prev hidden">
    <span class="visually-hidden">
      {{ params.titles.prev }}
    </span>
  </button>
  <button class="__browsing __browsing--next hidden">
    <span class="visually-hidden">
      {{ params.titles.next }}
    </span>
  </button>
</div>
